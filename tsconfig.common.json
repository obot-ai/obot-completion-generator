{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true
  },
  "include": ["src"]
}
